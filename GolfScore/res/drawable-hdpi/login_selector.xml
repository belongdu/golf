<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
  
    <!-- 没有焦点时的背景图片 -->  
    <item android:drawable="@drawable/bt_login_normal" android:state_enabled="true"/>  
    <item android:drawable="@drawable/bt_login_disabled" android:state_enabled="false"/>
    <!-- 触摸模式按下时的背景图片 -->  
    <item android:drawable="@drawable/bt_login_selected" android:state_pressed="true"/>   
  
    <!--  
    android:state_selected是选中  
    android:state_focused是获得焦点  
    android:state_pressed是点击  
    android:state_enabled是设置是否响应事件,指所有事件  
    -->  
  
</selector> 