<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <RelativeLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="88px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/topbg" >

        <Button
            android:id="@+id/groupBack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@drawable/top_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:shadowColor="#21591c"
            android:shadowRadius="3"
            android:text="@string/group"
            android:textColor="#FFFFFF"
            android:textSize="34px" />

        <Button
            android:id="@+id/groupBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/groupBack1"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/groupBack1"
            android:background="@null"
            android:text="@string/exit"
            android:textColor="#FFFFFF"
            android:textSize="30px" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:shadowColor="#21591c"
            android:shadowRadius="3"
            android:textColor="#FFFFFF"
            android:textSize="22px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="14dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="25px"
                android:src="@drawable/icon_group" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/imageView1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px"
                    android:textColor="#3E3A39"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35px"
                    android:textColor="#3E3A39"
                    android:textSize="24px" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="132px" >

            <TextView
                android:id="@+id/hole_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="110px"
                android:textColor="#3E3A39"
                android:textSize="60px" />

            <TextView
                android:id="@+id/hole_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="25px"
                android:text="@string/current"
                android:textColor="#3E3A39"
                android:textSize="24px" />

            <TextView
                android:id="@+id/hole_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/hole_info"
                android:layout_alignBottom="@+id/hole_info"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:text="@string/holename"
                android:textColor="#3E3A39"
                android:textSize="24px" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lineline"/>

        <EditText
            android:id="@+id/group_id"
            android:layout_width="500px"
            android:layout_height="88px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:background="@drawable/textbox"
            android:maxLength="2"
            android:hint="@string/group_num"
            android:inputType="number"
            android:paddingLeft="30px"
            android:textColor="#3E3A39"
            android:textColorHint="#9FA7AD"
            android:textSize="28px" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/sure_group"
            android:layout_width="500px"
            android:layout_height="88px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:background="@drawable/login_selector"
            android:text="@string/sure"
            android:textColor="#FFFFFF"
            android:textSize="28px" />
    </LinearLayout>

</RelativeLayout>