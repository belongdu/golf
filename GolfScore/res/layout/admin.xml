<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/bg" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/choose" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/hb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h1" />

                <Button
                    android:id="@+id/hb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h2" />

                <Button
                    android:id="@+id/hb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h3" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/hb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h4" />

                <Button
                    android:id="@+id/hb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h5" />

                <Button
                    android:id="@+id/hb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h6" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/hb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h7" />

                <Button
                    android:id="@+id/hb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h8" />

                <Button
                    android:id="@+id/hb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h9" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/hb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h10" />

                <Button
                    android:id="@+id/hb11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h11" />

                <Button
                    android:id="@+id/hb12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h12" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/hb13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h13" />

                <Button
                    android:id="@+id/hb14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h14" />

                <Button
                    android:id="@+id/hb15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h15" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/hb16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h16" />

                <Button
                    android:id="@+id/hb17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h17" />

                <Button
                    android:id="@+id/hb18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h18" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/back_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/imageView1"
        android:text="@string/back" />

</RelativeLayout>