<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.golfscore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.golfscore.application.BaseController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/GolfTheme" >
        <activity
            android:name="com.golfscore.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.golfscore.activity.AdminActivity"></activity>
    	<activity android:name="com.golfscore.activity.GroupActivity"></activity>
    	<activity android:name="com.golfscore.activity.ScoreActivity"></activity>
        <service android:name="com.golfscore.service.PollingService">
            <intent-filter>
                <action android:name="com.golfscore.service.PollingService"/>
            </intent-filter>
        </service>
    </application>

</manifest>